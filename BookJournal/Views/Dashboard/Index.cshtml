@model DashboardDTO
@{
    ViewData["Title"] = "My Dashboard";
}

<div class="text-center mb-4">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div class="row text-center mb-4">
    <div class="col-md-3"><div class="card text-white bg-primary"><div class="card-body"><h5 class="card-title">In Progress</h5><p class="card-text fs-3">@Model.BooksInProgress</p></div></div></div>
    <div class="col-md-3"><div class="card text-white bg-success"><div class="card-body"><h5 class="card-title">Completed</h5><p class="card-text fs-3">@Model.BooksCompleted</p></div></div></div>
    <div class="col-md-3"><div class="card text-white bg-warning"><div class="card-body"><h5 class="card-title">On Hold</h5><p class="card-text fs-3">@Model.BooksOnHold</p></div></div></div>
    <div class="col-md-3"><div class="card text-white bg-danger"><div class="card-body"><h5 class="card-title">Dropped</h5><p class="card-text fs-3">@Model.BooksDropped</p></div></div></div>
</div>
<div class="row mb-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div style="position: relative; height: 40vh; width: 100%;">
                    <h5 class="card-title">Genre Distribution</h5>
                    <canvas id="genreChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Last 7 Days</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Books Completed
                        <span class="badge bg-primary rounded-pill">@Model.BooksCompletedLastWeek</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Pages Read
                        <span class="badge bg-primary rounded-pill">@Model.PagesReadLastWeek</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header"><h3>My Bookshelf</h3></div>
    <div class="card-body">
        <div class="list-group">
            @foreach (var book in Model.AllBooks)
            {
                <a asp-controller="Progress" asp-action="Details" asp-route-id="@book.Id" class="list-group-item list-group-item-action flex-column align-items-start mb-3 border rounded">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@book.Title</h5>
                        <small>@book.Status.ToString()</small>
                    </div>
                    <p class="mb-1">by @book.Author</p>
                    <div class="progress mt-2 mb-2" style="height: 20px;"><div class="progress-bar" role="progressbar" style="width: @book.ProgressPercentage.ToString("0")%;" >@book.ProgressPercentage.ToString("0")%</div></div>
                    <small>@book.CurrentValue / @book.TotalValue @book.ProgressUnit.ToString()</small>
                </a>
            }
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('genreChart');
        const genreData = @Html.Raw(Json.Serialize(Model.GenreChartData));

        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: Object.keys(genreData),
                datasets: [{
                    label: '# of Books',
                    data: Object.values(genreData),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(153, 102, 255, 0.7)',
                        'rgba(255, 159, 64, 0.7)'
                    ],
                    borderColor: 'rgba(255, 255, 255, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    }
                }
            }
        });
    </script>
}