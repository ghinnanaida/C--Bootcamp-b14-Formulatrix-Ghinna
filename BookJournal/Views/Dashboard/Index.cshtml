@using BookJournal.DTOs
@model DashboardDTO 
@{
    ViewData["Title"] = "My Dashboard";
}

<div class="text-center mb-4">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div class="row text-center mb-4">
    <div class="col-md-3"><div class="card text-white bg-primary"><div class="card-body"><h5 class="card-title">In Progress</h5><p class="card-text fs-3">@Model.BooksInProgress</p></div></div></div>
    <div class="col-md-3"><div class="card text-white bg-success"><div class="card-body"><h5 class="card-title">Completed</h5><p class="card-text fs-3">@Model.BooksCompleted</p></div></div></div>
    <div class="col-md-3"><div class="card text-white bg-warning"><div class="card-body"><h5 class="card-title">On Hold</h5><p class="card-text fs-3">@Model.BooksOnHold</p></div></div></div>
    <div class="col-md-3"><div class="card text-white bg-danger"><div class="card-body"><h5 class="card-title">Dropped</h5><p class="card-text fs-3">@Model.BooksDropped</p></div></div></div>
</div>
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Monthly Completions (Last 6 Months)</h5>
                <canvas id="monthlyChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div style="position: relative; height: 50vh; width: 100%;">
                    <h5 class="card-title">Genre Distribution</h5>
                    <canvas id="genreChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Last 7 Days</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Books Completed
                        <span class="badge bg-primary rounded-pill">@Model.BooksCompletedLastWeek</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Pages Read
                        <span class="badge bg-primary rounded-pill">@Model.PagesReadLastWeek</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header"><h3>My Bookshelf</h3></div>
    <div class="card-body">
        <ul class="nav nav-tabs" id="bookshelfTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="inprogress-tab" data-bs-toggle="tab" data-bs-target="#inprogress-pane" type="button" role="tab">On Read</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="tbr-tab" data-bs-toggle="tab" data-bs-target="#tbr-pane" type="button" role="tab">To Be Read</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed-pane" type="button" role="tab">Completed</button>
            </li>
        </ul>
        <div class="tab-content" id="bookshelfTabsContent">
            <div class="tab-pane fade show active" id="inprogress-pane" role="tabpanel">
                <div class="list-group py-3">
                    @foreach (var book in Model.InProgressBooks) { <partial name="_BookshelfItem" model="book" /> }
                </div>
            </div>
            <div class="tab-pane fade" id="tbr-pane" role="tabpanel">
                <div class="p-3">
                    <a asp-controller="Library" asp-action="Index" class="btn btn-primary mb-3"><i class="bi bi-plus-circle"></i> Tambah Buku dari Library</a>
                </div>
                <div class="list-group py-3">
                    @foreach (var book in Model.TbrBooks) { <partial name="_BookshelfItem" model="book" /> }
                </div>
            </div>
            <div class="tab-pane fade" id="completed-pane" role="tabpanel">
                <div class="list-group py-3">
                    @foreach (var book in Model.CompletedBooks) { <partial name="_BookshelfItem" model="book" /> }
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('genreChart');
        const genreData = @Html.Raw(Json.Serialize(Model.GenreChartData));

        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: Object.keys(genreData),
                datasets: [{
                    label: '# of Books',
                    data: Object.values(genreData),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(153, 102, 255, 0.7)',
                        'rgba(255, 159, 64, 0.7)'
                    ],
                    borderColor: 'rgba(255, 255, 255, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    }
                }
            }
        });

        const monthlyCtx = document.getElementById('monthlyChart');
        const monthlyData = @Html.Raw(Json.Serialize(Model.MonthlyCompletionChartData));
        new Chart(monthlyCtx, {
            type: 'bar',
            data: {
                labels: Object.keys(monthlyData),
                datasets: [{
                    label: 'Books Completed',
                    data: Object.values(monthlyData),
                    backgroundColor: 'rgba(75, 192, 192, 0.7)',
                }]
            },
            options: { scales: { y: { beginAtZero: true, ticks: { stepSize: 1 } } } }
        });
    </script>
}