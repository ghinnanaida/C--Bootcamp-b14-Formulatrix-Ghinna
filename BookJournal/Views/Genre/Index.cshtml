@model IEnumerable<GenreDTO>
@{
    ViewData["Title"] = "Manage Genres";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <h3>Existing Genres</h3>
        <ul class="list-group">
            @foreach(var genre in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @genre.Name
                    <form asp-action="Delete" asp-route-id="@genre.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this genre?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </li>
            }
        </ul>
    </div>
    <div class="col-md-6">
        <h3>Add New Genre</h3>
        <form asp-action="Create" method="post">
            <div class="input-group">
                <input name="Name" class="form-control" placeholder="New genre name" />
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>