@model ProgressTrackerUpdateDTO

<div class="modal fade" id="updateProgressModal" tabindex="-1" aria-labelledby="updateProgressModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateProgressModalLabel">Update Progress</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="updateProgressForm" asp-controller="Progress" asp-action="Update" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="TotalValue" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StartDate" class="form-label">Start Date</label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="EndDate" class="form-label">End Date</label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CurrentValue" class="form-label">Current Progress</label>
                        <div class="input-group">
                            <input asp-for="CurrentValue" class="form-control" />
                            <span class="input-group-text" id="progressLabel">/ @Model.TotalValue</span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Reading Status</label>
                        <select asp-for="Status" asp-items="Html.GetEnumSelectList<BookStatus>()" class="form-control"></select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Rating" class="form-label">Your Rating (0-10)</label>
                        <input asp-for="Rating" type="number" step="0.5" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    var form = $('#updateProgressForm');
    
    form.on('submit', function(e) {
        e.preventDefault();
        
        $.ajax({
            url: form.attr('action'),
            method: form.attr('method'),
            data: form.serialize(),
            success: function(response) {
                if (response.success) {
                    $('#updateProgressModal').modal('hide');
                    window.location.href = '/Dashboard';
                }
            },
            error: function(xhr) {
                if (xhr.status === 400) {
                    $('.text-danger').text('');
                    $('.validation-summary').hide();
                    
                    var response = xhr.responseJSON;
                    if (response && response.errors) {
                        Object.keys(response.errors).forEach(function(key) {
                            var messages = response.errors[key].join(' ');
                            var errorSpan = $('[data-valmsg-for="' + key + '"]');
                            if (errorSpan.length > 0) {
                                errorSpan.text(messages);
                            } else if (key === '') {
                                $('.validation-summary').html(messages).show();
                            }
                        });
                    }
                }
            }
        });
    });
});
</script>