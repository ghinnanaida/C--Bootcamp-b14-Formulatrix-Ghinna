@model ProgressTrackerUpdateDTO

<div class="modal fade" id="updateProgressModal" tabindex="-1" aria-labelledby="updateProgressModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title" id="updateProgressModalLabel">Update Progress</h5><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button></div>
            <form id="updateProgressForm" asp-controller="Progress" asp-action="Update" method="post">
                <div class="modal-body">
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="EndDate" class="form-label"></label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CurrentValue" class="form-label"></label>
                        <div class="input-group"><input asp-for="CurrentValue" class="form-control" /><span class="input-group-text" id="progressLabel"></span></div>
                    </div>
                    <div class="mb-3"><label asp-for="Status" class="form-label"></label><select asp-for="Status" asp-items="Html.GetEnumSelectList<BookStatus>()" class="form-control"></select></div>
                    <div class="mb-3"><label asp-for="Rating" class="form-label">Rating (0-10)</label><input asp-for="Rating" type="number" step="0.5" class="form-control" /></div>
                </div>
                <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button><button type="submit" class="btn btn-primary">Save changes</button></div>
            </form>
        </div>
    </div>
</div>