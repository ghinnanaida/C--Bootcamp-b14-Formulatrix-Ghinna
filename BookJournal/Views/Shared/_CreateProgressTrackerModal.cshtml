@model ProgressTrackerCreateDTO

<div class="modal fade" id="addBookToJournalModal" tabindex="-1" aria-labelledby="addBookModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addBookModalLabel">Add Book to Journal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addBookForm" asp-controller="Progress" asp-action="AddToJournal" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" asp-for="BookId" />
                    
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Reading Status</label>
                        <select asp-for="Status" asp-items="Html.GetEnumSelectList<BookStatus>()" class="form-control"></select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="BookType" class="form-label">Book Format</label>
                        <select asp-for="BookType" asp-items="Html.GetEnumSelectList<BookType>()" class="form-control"></select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ProgressUnit" class="form-label">Progress Unit</label>
                        <select asp-for="ProgressUnit" asp-items="Html.GetEnumSelectList<ProgressUnit>()" class="form-control"></select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TotalValue" class="form-label">Total Value</label>
                        <input asp-for="TotalValue" type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CurrentValue" class="form-label">Current Progress</label>
                        <input asp-for="CurrentValue" type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Rating" class="form-label">Your Rating (0-10)</label>
                        <input asp-for="Rating" type="number" step="0.5" class="form-control" />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="EndDate" class="form-label"></label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add to Journal</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#BookType').change(function() {
        var bookType = $(this).val();
        var progressUnitSelect = $('#ProgressUnit');
        
        progressUnitSelect.empty();
        
        if (bookType === '@((int)BookType.Paperbook)') {
            progressUnitSelect.append(new Option('Pages', '@((int)ProgressUnit.Pages)'));
        } else if (bookType === '@((int)BookType.Ebook)') {
            progressUnitSelect.append(new Option('Percent', '@((int)ProgressUnit.Percent)'));
        } else if (bookType === '@((int)BookType.Audiobook)') {
            progressUnitSelect.append(new Option('Episodes', '@((int)ProgressUnit.Episodes)'));
        }
    });
});</script>